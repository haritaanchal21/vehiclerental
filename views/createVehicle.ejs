<%- include('partials/header') %>

  <div class="container mt-5">
    <h1>Create Vehicle</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/createvehicle" method="POST">
              <div class="form-group">
                <label for="Vehicle Type">Vehicle Type</label>
                <select name="dropdown" class="form-control">
                  <option value="Scooty" selected>Scooty</option>
                  <option value="Car">Car</option>
                  <option value="Bike">Bike</option>
                </select>
              </div>
              <div class="form-group">
                <label for="model">Model</label>
                <input type="text" class="form-control" name="model">
              </div>
              <div class="form-group">
                <label for="License Plate">License Plate</label>
                <input type="text" class="form-control" name="License Plate">
              </div>
              <div class="form-group">
                <label for="QR code">QR code</label>
                <input type="text" class="form-control" name="QR code">
              </div>
            </form>
            <button type="submit" class="btn btn-dark">Create Vehicle</button>
          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>
