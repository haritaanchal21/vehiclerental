<%- include('partials/header') %>
  <a class="btn btn-dark btn-lg" href="/logout" role="button">Logout</a>

  <div class="container mt-5">
    <h1>Assign vehicles to stations</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
            <% if (errorMessage) { %>
              <div>
                <script>alert("<%= errorMessage %>")</script>
              </div>
              <% } %>

                <!-- Makes POST request to /login route -->
                <form action="/inventory" method="POST">
                  <div class="form-group">
                    <label for="station">Station</label>
                    <select id="station" name="station" class="form-control">
                      <% for(let i=0; i<stations.length; i++) { %>
                        <option value="<%= stations[i]._id %>">
                          <%= stations[i].location %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="vehicle">Vehicle</label>
                    <select id="vehicle" name="vehicle" class="form-control">
                      <% for(let i=0; i<vehicles.length; i++) { %>
                        <option value="<%= vehicles[i]._id %>">
                          <%= vehicles[i].licensePlate %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <button type="submit" class="btn btn-dark">Assign</button>
                </form>
          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>
